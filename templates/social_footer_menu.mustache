{{!
    @template theme_solent/social_footer_menu

    Renders the social footer menu.
    Example context (json):
    {
        "nodes": [
            {
                "class": "facebook",
                "url": "http://facebook.com/moodle",
                "text": "Facebook"
            },
            {
                "class": "twitter",
                "url": "http://twitter.com/moodle",
                "text": "Twitter"
            }
        ]
    }
}}
{{#nodes}}
    <li>
        <a class="social {{class}}" href="{{{url}}}" target="_blank" aria-label="{{{text}}}"></a>
    </li>
{{/nodes}}